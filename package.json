{
  "name": "@bookiflex/workspace-root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:free": "npm run dev -w @bookiflex/admin-free",
    "dev:pro": "npm run dev -w @bookiflex/admin-pro",
    "build:core": "npm run build -w @bookiflex/admin-core",
    "build:free": "npm run build:core && npm run build -w @bookiflex/admin-free",
    "build:pro": "npm run build:core && npm run build -w @bookiflex/admin-pro",
    "build:all": "npm run build:core && npm run build -w @bookiflex/admin-free && npm run build -w @bookiflex/admin-pro",
    "lint": "eslint packages/*/src --fix",
    "format": "prettier --write packages/"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "globals": "^16.1.0",
    "prettier": "3.5.3",
    "sass": "^1.97.1",
    "terser": "^5.44.0",
    "vite": "^6.0.2"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.20.1"
  }
}
